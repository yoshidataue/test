    <ui:FluentWindow x:Class="MHFZ_Overlay.Views.Windows.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
        d:DataContext="{d:DesignInstance Type=windows:AddressModel}"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:converter="clr-namespace:MHFZ_Overlay.Services.Converter"
        xmlns:customcontrols="clr-namespace:MHFZ_Overlay.Views.CustomControls"
        xmlns:validationrules="clr-namespace:MHFZ_Overlay.Services.ValidationRule"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:viewmodels="clr-namespace:MHFZ_Overlay.ViewModels.Windows"
        xmlns:collections="clr-namespace:MHFZ_Overlay.Models.Collections"
        xmlns:windows="clr-namespace:MHFZ_Overlay.ViewModels.Windows"
        xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        mc:Ignorable="d"
        x:Name="Config"
        Title="Monster Hunter Frontier Z Overlay Settings"
        Height="720" Width="1280" ResizeMode="CanResize"
        Foreground="{StaticResource Text}"
        Background="{StaticResource Base}"
        Closed="Config_Closed"
        TextElement.Foreground="{StaticResource Text}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{StaticResource Segoe UI Variable}"
        BorderBrush="#b4befe"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
    >
    <!--Background="#1e1e2e"-->
    <Window.Resources>
        <ResourceDictionary>
            <ObjectDataProvider x:Key="FontFamilies"
                            MethodName="GetFontFamilies"
                            ObjectType="{x:Type fonts:Fonts}"
                            xmlns:fonts="clr-namespace:System.Windows.Media;assembly=PresentationCore"/>
            <converter:OptionToTemplateConverter x:Key="OptionToTemplateConverter"/>
            <converter:OptionToVisibilityConverter x:Key="OptionToVisibilityConverter"/>
            <converter:XamlIconToViewBoxConverter x:Key="XamlIconToViewBoxConverter"/>
            <converter:AchievementRankToBrushConverter x:Key="AchievementRankToBrushConverter"/>
            <converter:CompletionDateToOpacityConverter x:Key="CompletionDateToOpacityConverter"/>
            <converter:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
            <converter:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
            <converter:AchievementToColorConverter x:Key="AchievementToColorConverter"/>
            <converter:UnlockChallengeButtonContentConverter x:Key="UnlockChallengeButtonContentConverter"/>

            <!-- Define the reusable context menu in a resource dictionary or at a higher level in your XAML hierarchy -->
            <ContextMenu x:Key="HunterNotesContextMenu" x:Name="HunterNotesContextMenu">
                <ui:MenuItem x:Name="HunterNotesCopyTextMenuItem" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Copy20"/>
                            <TextBlock Margin="5,0,0,0" Text="Copy to Clipboard as Text"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <ui:MenuItem x:Name="HunterNotesCopyImageMenuItem" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Copy20"/>
                            <TextBlock Margin="5,0,0,0" Text="Copy to Clipboard as Image"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <ui:MenuItem x:Name="HunterNotesSaveTextMenuItem" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowDownload20"/>
                            <TextBlock Margin="5,0,0,0" Text="Save as Text"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <ui:MenuItem x:Name="HunterNotesSaveImageMenuItem" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowDownload20"/>
                            <TextBlock Margin="5,0,0,0" Text="Save as Image"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <!-- Add more menu items if needed -->
            </ContextMenu>
            <ContextMenu x:Key="HunterNotesContextMenuImageOnly" x:Name="HunterNotesContextMenuImageOnly">
                <ui:MenuItem x:Name="HunterNotesCopyImageMenuItem2" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Copy20"/>
                            <TextBlock Margin="5,0,0,0" Text="Copy to Clipboard as Image"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <ui:MenuItem x:Name="HunterNotesSaveImageMenuItem2" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowDownload20"/>
                            <TextBlock Margin="5,0,0,0" Text="Save as Image"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <!-- Add more menu items if needed -->
            </ContextMenu>
            <ContextMenu x:Key="HunterNotesContextMenuImageCSV" x:Name="HunterNotesContextMenuImageCSV">
                <ui:MenuItem x:Name="HunterNotesSaveCSVMenuItem" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="DocumentBulletList20"/>
                            <TextBlock Margin="5,0,0,0" Text="Save as CSV"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <ui:MenuItem x:Name="HunterNotesCopyImageMenuItem3" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Copy20"/>
                            <TextBlock Margin="5,0,0,0" Text="Copy to Clipboard as Image"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <ui:MenuItem x:Name="HunterNotesSaveImageMenuItem3" Click="HunterNotesGridMenuItem_Click">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowDownload20"/>
                            <TextBlock Margin="5,0,0,0" Text="Save as Image"/>
                        </StackPanel>
                    </MenuItem.Header>
                </ui:MenuItem>
                <!-- Add more menu items if needed -->
            </ContextMenu>
            <DataTemplate x:Key="DefaultTemplate">
                <Grid Background="#7f1e1e2e">
                    <TextBlock TextWrapping="Wrap" MaxWidth="500" MaxHeight="500" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                        Welcome to the Quest Logs statistics section! Here you can modify the YouTube link of your runs, view weapon usage, see your most recent quest times and much more!
                        <LineBreak/>
                        <LineBreak/>
                        Please keep in mind that if you update the overlay version or re-install the game, the database file may get overwritten. It is recommended to make a periodic backup of the MHFZ_Overlay.sqlite file, found in the database folder which is inside the game folder.
                        <LineBreak/>
                        <LineBreak/>
                        Select an option from the Section drop-down menu in order to view these statistics. The compendium section may take some time to load.
                        <LineBreak/>
                        <LineBreak/>
                        See the FAQ for checking the run buffs of old categories.
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="CompendiumTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#bac2de" />

                    <Grid Grid.Row="0" Grid.Column="1">
                        <DockPanel Margin="5">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save summary of stats to text file" Click="CompendiumBtnSaveFile_Click">
                                        <Button.Content>
                                            <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="24" Foreground="{StaticResource Green}"/>
                                        </Button.Content>
                                    </ui:Button>
                                    <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy stats to clipboard as image (recommended to maximize configuration window)" Click="CompendiumBtnCopyFile_Click">
                                        <Button.Content>
                                            <ui:SymbolIcon Symbol="Copy24" Foreground="{StaticResource Sapphire}" FontSize="24"/>
                                        </Button.Content>
                                    </ui:Button>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Margin="0,10,0,0" Loaded="CompendiumInformationStackPanel_Loaded">
                                    <TextBlock TextWrapping="Wrap" Loaded="Compendium_Loaded" ToolTip="Summary of your statistics"/>
                                    <lvc:PolarChart ToolTip="Percentage is calculated by dividing the median with the highest registered value" Loaded="HunterPerformancePolarChart_Loaded" Width="500" Height="500" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </Grid>

                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="CalendarTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="{StaticResource Teal}" />

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save summary of stats to text file" Click="CalendarButtonSaveFile_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="24" Foreground="{StaticResource Green}"/>
                                </Button.Content>
                            </ui:Button>
                            <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy stats to clipboard as image (recommended to maximize configuration window)" Click="CalendarButtonCopyFile_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="Copy24" Foreground="{StaticResource Sapphire}" FontSize="24"/>
                                </Button.Content>
                            </ui:Button>
                            <DatePicker Width="Auto" Height="Auto" HorizontalAlignment="Left" SelectedDateChanged="CalendarDatePicker_SelectedDateChanged" ToolTip="View the runs you did on a specific day"/>
                        </StackPanel>
                        <ui:DataGrid x:Name="CalendarDataGrid" AutoGenerateColumns="False" Loaded="Calendar_DataGridLoaded" IsReadOnly="True">
                            <DataGrid.ColumnHeaderStyle>
                                <StaticResource ResourceKey="DefaultDataGridColumnHeaderStyle"/>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Objective" Width="128">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ObjectiveImage}" Width="64" Height="64" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Quest Name" Binding="{Binding QuestName}" Width="250">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Run ID" Binding="{Binding RunID}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Quest ID" Binding="{Binding QuestID}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Youtube ID" Binding="{Binding YouTubeID}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Time Elapsed" Binding="{Binding FinalTimeDisplay}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Category" Binding="{Binding ActualOverlayMode}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Run Buffs" Binding="{Binding RunBuffs}" Width="96">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Party Size" Binding="{Binding PartySize}" Width="96">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <!-- Add more columns with custom headers as needed -->
                            </DataGrid.Columns>
                        </ui:DataGrid>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="GearTemplate">
                <!-- Grid structure for the "Gear" option -->
                <Grid x:Name="QuestLogGearGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#94e2d5" />

                    <Grid x:Name="QuestLogGearTextGrid" Grid.Row="0" Grid.Column="1">
                        <DockPanel Margin="5">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <ui:Button Background="Transparent" Margin="10,0,0,0" x:Name="QuestLogGearBtnSaveFile" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save gear to text file" Click="QuestLogGearBtnSaveFile_Click">
                                        <Button.Content>
                                            <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="24" Foreground="{StaticResource Green}"/>
                                        </Button.Content>
                                    </ui:Button>
                                    <ui:Button Background="Transparent" Margin="10,0,0,0" x:Name="QuestLogGearBtnCopyFile" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy gear to clipboard as image (recommended to maximize configuration window)" Click="QuestLogGearBtnCopyFile_Click">
                                        <Button.Content>
                                            <ui:SymbolIcon Symbol="Copy24" Foreground="{StaticResource Sapphire}" FontSize="24"/>
                                        </Button.Content>
                                    </ui:Button>
                                </StackPanel>

                                <TextBlock Margin="0,10,0,0" ToolTip="Gear associated with the Run ID" Name="QuestLogGearStats" TextWrapping="Wrap" Loaded="QuestLogGearStats_Loaded"/>
                            </StackPanel>
                        </DockPanel>
                    </Grid>

                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="PersonalBestTemplate">
                <!-- Grid structure for the "Personal Best" option -->
                <Grid Loaded="PersonalBestMainGridLoaded">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>
                    <!--TODO: change color-->
                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#fab387" />

                    <StackPanel  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <!--TODO: add the refresh button to the other sections-->
                            <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save summary of stats to image file" Click="PersonalBestButtonSaveFile_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="24" Foreground="{StaticResource Green}"/>
                                </Button.Content>
                            </ui:Button>
                            <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy stats to clipboard as image (recommended to maximize configuration window)" Click="PersonalBestButtonCopyFile_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="Copy24" Foreground="{StaticResource Sapphire}" FontSize="24"/>
                                </Button.Content>
                            </ui:Button>
                            <ui:Button Background="Transparent" BorderThickness="0" ToolTip="Refresh" Click="PersonalBestRefreshButton_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="ArrowCounterclockwise24" FontSize="24" Foreground="{StaticResource Yellow}"/>
                                </Button.Content>
                            </ui:Button>

                            <ComboBox SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="PersonalBestTypeComboBox_SelectionChanged">
                                <ComboBoxItem>(Quest ID) Personal Best by Date</ComboBoxItem>
                                <ComboBoxItem>(Quest ID) Personal Best by Attempts</ComboBoxItem>
                            </ComboBox>
                            <ComboBox SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="PersonalBestWeaponComboBox_SelectionChanged">
                                <ComboBoxItem>Sword and Shield</ComboBoxItem>
                                <ComboBoxItem>Dual Swords</ComboBoxItem>
                                <ComboBoxItem>Great Sword</ComboBoxItem>
                                <ComboBoxItem>Long Sword</ComboBoxItem>
                                <ComboBoxItem>Hammer</ComboBoxItem>
                                <ComboBoxItem>Hunting Horn</ComboBoxItem>
                                <ComboBoxItem>Lance</ComboBoxItem>
                                <ComboBoxItem>Gunlance</ComboBoxItem>
                                <ComboBoxItem>Tonfa</ComboBoxItem>
                                <ComboBoxItem>Switch Axe F</ComboBoxItem>
                                <ComboBoxItem>Magnet Spike</ComboBoxItem>
                                <ComboBoxItem>Light Bowgun</ComboBoxItem>
                                <ComboBoxItem>Heavy Bowgun</ComboBoxItem>
                                <ComboBoxItem>Bow</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Personal Best of solo runs of quest ID by category" Loaded="PersonalBestDescriptionTextBlock_Loaded"/>
                        </StackPanel>
                        <Grid x:Name="personalBestChartGrid" Loaded="PersonalBestChartGrid_Loaded">
                            <lvc:CartesianChart Loaded="PersonalBest_Loaded" Margin="5" Width="800" Height="500" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="Top20Template">
                <!-- Grid structure for the "Top 20" option -->
                <Grid Loaded="Top20MainGridLoaded">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#fab387" />

                    <!--listview here-->
                    <StackPanel  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save summary of stats to text file" Click="Top20ButtonSaveFile_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="24" Foreground="{StaticResource Green}"/>
                                </Button.Content>
                            </ui:Button>
                            <ui:Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy stats to clipboard as image (recommended to maximize configuration window)" Click="Top20ButtonCopyFile_Click">
                                <Button.Content>
                                    <ui:SymbolIcon Symbol="Copy24" Foreground="{StaticResource Sapphire}" FontSize="24"/>
                                </Button.Content>
                            </ui:Button>
                            <ComboBox x:Name="weaponListTop20RunsComboBox" ToolTip="Top 20 fastest solo runs of quest ID by category" SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="WeaponListTop20RunsComboBox_SelectionChanged">
                                <ComboBoxItem>All Weapons</ComboBoxItem>
                                <ComboBoxItem>Sword and Shield</ComboBoxItem>
                                <ComboBoxItem>Dual Swords</ComboBoxItem>
                                <ComboBoxItem>Great Sword</ComboBoxItem>
                                <ComboBoxItem>Long Sword</ComboBoxItem>
                                <ComboBoxItem>Hammer</ComboBoxItem>
                                <ComboBoxItem>Hunting Horn</ComboBoxItem>
                                <ComboBoxItem>Lance</ComboBoxItem>
                                <ComboBoxItem>Gunlance</ComboBoxItem>
                                <ComboBoxItem>Tonfa</ComboBoxItem>
                                <ComboBoxItem>Switch Axe F</ComboBoxItem>
                                <ComboBoxItem>Magnet Spike</ComboBoxItem>
                                <ComboBoxItem>Light Bowgun</ComboBoxItem>
                                <ComboBoxItem>Heavy Bowgun</ComboBoxItem>
                                <ComboBoxItem>Bow</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Top 20 fastest solo runs of quest ID by category" Loaded="Top20RunsDescriptionTextBlock_Loaded"/>
                        </StackPanel>
                        <ui:DataGrid x:Name="Top20RunsDataGrid" AutoGenerateColumns="False" Loaded="Top20Runs_DataGridLoaded" IsReadOnly="True">
                            <DataGrid.ColumnHeaderStyle>
                                <StaticResource ResourceKey="DefaultDataGridColumnHeaderStyle"/>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Objective" Width="128">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ObjectiveImage}" Width="64" Height="64" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Quest Name" Binding="{Binding QuestName}" Width="250">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Run ID" Binding="{Binding RunID}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Quest ID" Binding="{Binding QuestID}" Width="128">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
