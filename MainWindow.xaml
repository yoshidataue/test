    <Window x:Class="MHFZ_Overlay.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:converter="clr-namespace:MHFZ_Overlay.Services.Converter"
        xmlns:customcontrols="clr-namespace:MHFZ_Overlay.Views.CustomControls"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:viewmodels="clr-namespace:MHFZ_Overlay.ViewModels.Windows"
        xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
        d:DataContext="{d:DesignInstance Type=viewmodels:AddressModel}"
        mc:Ignorable="d"
        x:Name="Window"
        Title="Monster Hunter Frontier Z Overlay"         
        Height="{Binding Source={StaticResource Settings},Path=MaxResolutionHeight}"
        Width="{Binding Source={StaticResource Settings},Path=MaxResolutionWidth}"
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStyle="None"
        Loaded="Window_Loaded"
        Style="{StaticResource WinAll}"
        FontFamily="{StaticResource Segoe UI Variable}"
        >
    <Window.Resources>
        <converter:XamlIconToViewBoxConverter x:Key="XamlIconToViewBoxConverter"/>
        <!--TODO: Unused Code?-->
        <RoutedUICommand x:Key="ESC" Text="Escape"/>
    </Window.Resources>
    <Grid>
        <Grid>
            <tray:NotifyIcon Visibility="Visible"
                MenuOnRightClick="True"
                TooltipText="Monster Hunter Frontier Z Overlay"
                x:Name="MainWindowNotifyIcon">
                <tray:NotifyIcon.Menu>
                    <ContextMenu>
                        <ui:MenuItem ToolTip="Open the hotkeys window" Foreground="{StaticResource Text}" Header="Hotkeys" Tag="hotkeys" Click="OptionHotkeys_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Keyboard24" Foreground="{StaticResource Text}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem ToolTip="Open the configuration window" Foreground="{StaticResource Green}" Header="Settings" Tag="settings" Click="OptionSettings_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Settings24" Foreground="{StaticResource Green}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:NavigationViewItemSeparator/>
                        <ui:MenuItem Foreground="{StaticResource Blue}" ToolTip="Go to Frequently Asked Questions page" Header="Help" Tag="help" Click="OptionHelp_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Open24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Blue}" ToolTip="Go to documentation page" Header="Documentation" Tag="documentation" Click="OptionDocumentation_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Open24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Blue}" ToolTip="Go to report bug page" Header="Report Bug" Tag="reportbug" Click="OptionReportBug_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Open24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Blue}" ToolTip="Go to request feature page" Header="Request Feature"  Tag="requestfeature" Click="OptionRequestFeature_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Open24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Blue}" ToolTip="Go to feedback page" Header="Send Feedback" Tag="sendfeedback" Click="OptionSendFeedback_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Open24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Blue}" ToolTip="Go to changelog page" Header="Changelog" Tag="changelog" Click="OptionChangelog_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Open24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:NavigationViewItemSeparator/>
                        <ui:MenuItem Foreground="{StaticResource Rosewater}" ToolTip="Open settings folder" Header="Settings Folder" Tag="settingsfolder" Click="OptionSettingsFolder_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="OpenFolder24" Foreground="{StaticResource Rosewater}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Rosewater}" ToolTip="Open logs folder" Header="Logs Folder" Tag="logsfolder" Click="OptionLogsFolder_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="OpenFolder24" Foreground="{StaticResource Rosewater}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Rosewater}" ToolTip="Open database folder" Header="Database Folder" Tag="databasefolder" Click="OptionDatabaseFolder_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="OpenFolder24" Foreground="{StaticResource Rosewater}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Foreground="{StaticResource Rosewater}" ToolTip="Open overlay folder" Header="Overlay Folder" Tag="overlayfolder" Click="OptionOverlayFolder_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="OpenFolder24" Foreground="{StaticResource Rosewater}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:NavigationViewItemSeparator/>
                        <ui:MenuItem ToolTip="Restart overlay" Foreground="{StaticResource Yellow}" Header="Restart" Tag="restart" Click="OptionRestart_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="ArrowClockwise24" Foreground="{StaticResource Yellow}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem ToolTip="Exit overlay" Foreground="{StaticResource Red}" Header="Exit" Tag="exit" Click="OptionExit_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="ArrowExit20" Foreground="{StaticResource Red}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:NavigationViewItemSeparator/>
                        <ui:MenuItem ToolTip="Go to GitHub repository" Foreground="{StaticResource Blue}" Header="About" Tag="about" Click="OptionAbout_Click">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Info24" Foreground="{StaticResource Blue}"/>
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                    </ContextMenu>
                </tray:NotifyIcon.Menu>
            </tray:NotifyIcon>
            <ui:TitleBar Visibility="Hidden" BorderThickness="0" BorderBrush="{StaticResource Red}" x:Name="TitleBarBorder"/>
            <Canvas x:Name="MainGrid" Width="{Binding Source={StaticResource Settings},Path=MaxResolutionWidth}" Height="{Binding Source={StaticResource Settings},Path=MaxResolutionHeight}" Background="Transparent" AllowDrop="True" Drop="MainGrid_Drop" DragOver="MainGrid_DragOver"  MouseMove="MainGrid_MouseMove">
            <Grid x:Name="SharpnessInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=SharpnessInfoX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=SharpnessInfoY}" Width="200" Height="50" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}"  Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowSharpness, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition  Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Border x:Name="SharpnessInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

                <customcontrols:OutlinedTextBlock HorizontalAlignment="Left" Text="{x:Bind DataLoader.Model.SharpnessNumber}" Grid.Column="0" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding SharpnessColor}"/>
            </Grid>
                <Grid x:Name=
                      "DualSwordsSharpensInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=DualSwordsSharpensX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=DualSwordsSharpensY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}"  Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowDualSwordsSharpens, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition  Width="2*" />
                        <ColumnDefinition  Width="4*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Border x:Name="DualSwordsSharpensBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>
                    <Image Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding DualSwordsSharpensIcon}" d:Source="../../Assets/Icons/png/whetstone.png"/>
                    <customcontrols:OutlinedTextBlock d:Text="4" d:Fill="{Binding Source={StaticResource Settings},Path=TextColor}" VerticalAlignment="Center"  HorizontalAlignment="Left"  Text="{x:Bind DataLoader.Model.DualSwordsSharpensCount}" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding DualSwordsSharpensColor}" Margin="4,0,0,0"/>
                </Grid>
                <Grid x:Name="SessionTimeInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=SessionTimeX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=SessionTimeY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowSessionTimeInfo, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatIcon, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0">
                <Button.Content>
                    <ui:SymbolIcon Symbol="Timer16" Foreground="{StaticResource Rosewater}" FontSize="16"/>
                </Button.Content>
            </Button>
                <Border x:Name="SessionTimeInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>
                <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatText, Converter={StaticResource BoolToVis}}"  HorizontalAlignment="Left" Text="Session" Grid.Column="0" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}" />
            <!--TODO: x:Bind-->
            <customcontrols:OutlinedTextBlock   HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}" x:Name="sessionTimeTextBlock" Text="{Binding CurrentSessionTime, StringFormat=hh\\:mm\\:ss}" Margin="4,0,0,0"/>
        </Grid>
        <Grid Opacity="{Binding DivaSongOpacity}" x:Name="DivaSongTimer" Canvas.Left="{Binding Source={StaticResource Settings},Path=DivaSongTimerX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=DivaSongTimerY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowDivaSongTimer, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border x:Name="DivaSongTimerBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

            <Image Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding DivaSongIcon}" d:Source="../../Assets/Icons/png/diva_fountain.png"/>
            <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock d:Fill="{Binding Source={StaticResource Settings},Path=TextColor}" VerticalAlignment="Center"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding DivaSongFill}" Text="{Binding DivaSongTimeLeft}" d:Text="999m" Margin="4,0,0,0"/>
        </Grid>
        <Grid x:Name="GuildFoodTimer" d:Opacity=".5" Opacity="{Binding GuildFoodOpacity}" Canvas.Left="{Binding Source={StaticResource Settings},Path=GuildFoodTimerX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=GuildFoodTimerY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowGuildFoodTimer, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border x:Name="GuildFoodTimerBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

            <Image Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding GuildFoodIcon}" d:Source="../../Assets/Icons/png/guild_hall.png"/>
            <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock  d:Fill="{Binding Source={StaticResource Settings},Path=TextColor}" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding GuildFoodFill}" Text="{Binding GuildFoodTimeLeft}" d:Text="999m"  Margin="4,0,0,0"/>
        </Grid>
        <Grid x:Name="PlayerPositionInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=PlayerPositionX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=PlayerPositionY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowPlayerPositionInfo, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border x:Name="PlayerPositionInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>
            <customcontrols:OutlinedTextBlock   HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}" x:Name="playerPositionTextBlock" Text="{Binding CurrentPlayerPosition}" d:Text="1230, -2304, 6000" Margin="4,0,0,0"/>
        </Grid>
        <Grid x:Name="OverlayModeWatermark" Canvas.Left="{Binding Source={StaticResource Settings},Path=OverlayModeWatermarkX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=OverlayModeWatermarkY}" Width="360" Height="30" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayModeWatermark, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border x:Name="OverlayModeWatermarkBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

            <customcontrols:OutlinedTextBlock x:Name="OverlayModeWatermarkTextBlock" Opacity=".5" HorizontalAlignment="Left" Text="{Binding OverlayModeWatermarkText}" FontFamily="MS Gothic" FontSize="21" FontWeight="Bold" Grid.Column="0" Grid.Row="0" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}" />
        </Grid>
        <Grid x:Name="PersonalBestInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=PersonalBestX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=PersonalBestY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowPersonalBestInfo, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border x:Name="PersonalBestInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>
            <Image Height="30" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatIcon, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding PersonalBestIcon}"/>

            <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatText, Converter={StaticResource BoolToVis}}"  HorizontalAlignment="Left" Text="PB" Grid.Column="0" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}" />
            <customcontrols:OutlinedTextBlock d:Text="100" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding IsOnBestPace}" x:Name="personalBestTextBlock" Text="--:--.---" Margin="4,0,0,0"/>
        </Grid>
        <Grid x:Name="TimerInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=TimerX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=TimerY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowTimerInfo, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatIcon, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding QuestTimeIcon}"/>
            <Border x:Name="TimerInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

            <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatText, Converter={StaticResource BoolToVis}}"  HorizontalAlignment="Left" Text="{Binding QuestTimeMode}" Grid.Column="0" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}" />
            <customcontrols:OutlinedTextBlock HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding IsOnPace}" x:Name="timerTextBlock" Text="{x:Bind DataLoader.Model.Time}" Margin="4,0,0,0"/>
        </Grid>
        <Grid x:Name="ActionsPerMinuteInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=ActionsPerMinuteX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=ActionsPerMinuteY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowAPM, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border x:Name="ActionsPerMinuteInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

            <Image Height="30" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatIcon, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding APMIcon}"/>

            <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatText, Converter={StaticResource BoolToVis}}"  HorizontalAlignment="Left" Text="APM" Grid.Column="0" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}"/>
            <customcontrols:OutlinedTextBlock   HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0"  FontSize="{Binding Path=SecondaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=SecondaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=SecondaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding IsAverageAPM}" Text="{x:Bind $'{DataLoader.Model.APM:0.0}'}" Margin="4,0,0,0"/>
        </Grid>
        <Grid x:Name="DamagePerSecondInfo" Canvas.Left="{Binding Source={StaticResource Settings},Path=PlayerDPSX}" Canvas.Top="{Binding Source={StaticResource Settings},Path=PlayerDPSY}" Width="Auto" Height="Auto" MouseLeftButtonDown="ElementMouseLeftButtonDown" Background="{Binding Source={StaticResource Settings},Path=TextBackGroundColor}" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowDamagePerSecond, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="2*" />
                <ColumnDefinition  Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image Height="30" Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatIcon, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Source="{Binding DPSIcon}"/>
            <Border x:Name="DamagePerSecondInfoBorder" BorderBrush="{StaticResource Red}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0"/>

            <!--<TextBlock Foreground="#cdd6f4"  FontFamily="Source Code Pro" IsHitTestVisible="False" Style="{StaticResource MainTextBox}" Grid.Column="0" Grid.Row="0" Text="Hit Count"/>-->
            <customcontrols:OutlinedTextBlock Visibility="{Binding ElementName=Window, Path=DataLoader.Model.ShowOverlayStatText, Converter={StaticResource BoolToVis}}"  HorizontalAlignment="Left" Text="DPS" Grid.Column="0" Grid.Row="0"  FontSize="{Binding Path=PrimaryFontSize, Source={StaticResource Settings}}" FontFamily="{Binding Path=PrimaryFontFamily, Source={StaticResource Settings}}" FontWeight="{Binding Path=PrimaryFontWeight, Source={StaticResource Settings}}" StrokeThickness="4" Stroke="#1e1e2e" Fill="{Binding Source={StaticResource Settings},Path=TextColor}"/>
